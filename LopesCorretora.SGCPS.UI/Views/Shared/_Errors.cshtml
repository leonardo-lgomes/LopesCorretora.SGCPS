@if (ViewBag.Mensagem != null)
{
    <div id="divErro" class="row col-sm-12">
        <div id="divMensagem" class="@ViewBag.msgClass" style="@ViewBag.msgStyle; float:none;">
            <span id="msgErro">
                <b>@ViewBag.Mensagem</b>
            </span>
        </div>
    </div>
}